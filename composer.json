{
    "name": "eightyfour/waffle",
    "version": "0.1.0",
    "description": "Base PHP Framework",
    "type": "library",
    "license": ["proprietary"],
    "autoload": {
        "psr-4": {
            "Waffle\\": "src/",
            "WaffleTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Leslie Petrimaux"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4.5",
        "symfony/dotenv": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "carthage-software/mago": "^1.0.0-beta.26",
        "vimeo/psalm": "^6.13"
    },
    "scripts": {
        "post-install-cmd": [
          "@post-cmd"
        ],
        "post-update-cmd": [
          "@post-cmd"
        ],
        "post-cmd": [
          "mkdir -p var/cache",
          "chmod -R 777 var/cache"
        ],
        "formatter": "vendor/bin/mago fmt",
        "linter": "vendor/bin/mago lint",
        "analyzer": "vendor/bin/mago analyze",
        "phpunit": "vendor/bin/phpunit --log-junit var/data/phpunit-coverage/junit.xml --coverage-html var/data/phpunit-coverage",
        "benchmark": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpbench run --report=default_report --output=waffle_html --retry-threshold=10"
        ],
        "mago": [
            "@formatter",
            "@linter",
            "@analyzer"
        ],
        "tests": [
            "@phpunit"
        ],
        "scan": [
            "@mago",
            "@tests",
            "@benchmark"
        ]
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}
